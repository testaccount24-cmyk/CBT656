/* REXX HREC */
/* HRECALLS ALL LISTED DSETS AND WRITES A FLAG TO AVOID THIS          */
/* ON A RELOGIN ON SAME DAY                                           */
ADDRESS ISPEXEC
AVAIL = SYSDSN('HRECLOG')
IF AVAIL = "OK" THEN SIGNAL QUI
DAT = DATE( );
DATF = SUBSTR(DAT,1,2)
IF DATF // 7 = 0 THEN DO
       ADDRESS TSO
       HRECALL 'HANNA.*' NOWAIT
       SUBMIT 'HANNA.CNTL(HRECLOG)'
END
ADDRESS TSO
HRECALL 'HANNA.CUE'       NOWAIT
HRECALL 'HANNA.HISTORY'   NOWAIT
QUI :
EXIT 0
