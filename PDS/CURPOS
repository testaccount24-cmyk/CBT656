/* REXX CURPOS                                                        */
ADDRESS "ISREDIT"
"MACRO"
"(DSPLINES) = DISPLAY_LINES"
"(DSPCOLS)  = DISPLAY_COLS"
"(L,C)      = CURSOR"

SAY "DISPLAY_LINES =" DSPLINES + 0           /* REMOVE LEADING ZEROES */
SAY "DISPLAY_COLS  =" DSPCOLS  + 0
SAY "CURSOR LINE   =" L + 0
SAY "CURSOR COLUMN =" C + 0

IF   C    > 0                           /* CALCULATE RELATIVE CSR COL */
THEN CREL = C - DSPCOLS + 1
ELSE CREL = 0

IF   L    > 0
THEN LREL = L - DSPLINES + 1           /* CALCULATE RELATIVE CSR LINE */
ELSE LREL = 0

SAY "REL. CSR LINE =" LREL
SAY "REL. CSR COL  =" CREL
              DISPLAY_LINES = (DSPLINES)"
              DISPLAY_COLS  = (DSPCOLS)"
EXIT
