/* REXX GMT OFFSET */
/* GET THE LOCAL OFFSET FROM GMT */
CVT   = STORAGE(10,4)                      /*GET THE CVT ADDRESS*/
CVTTZ = STORAGE(D2X(C2D(CVT)+X2D(130)),4)  /*GET CVTTZ VALUE*/
GMT_OFFSET = TRUNC(C2D(CVTTZ,4) * 1.048576 / 3600) /*CONVERT TO OFFSET*/
IF SIGN(GMT_OFFSET) < 0 THEN GMT_SIGN = '-'
                        ELSE GMT_SIGN = '+'
GMT_OFFSET_HHMM = GMT_SIGN||RIGHT(ABS(GMT_OFFSET)*100,4,'0') /*FORMAT*/
SAY GMT_OFFSET_HHMM
EXIT
